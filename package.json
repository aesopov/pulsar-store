{
  "name": "pulsar-store",
  "version": "0.1.4",
  "description": "Lightweight TypeScript reactive store with automatic dependency tracking",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "reactive",
    "store",
    "state",
    "proxy",
    "signals",
    "typescript",
    "observable"
  ],
  "author": "Mikhail Isupov",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aesopov/pulsar-store.git"
  },
  "bugs": {
    "url": "https://github.com/aesopov/pulsar-store/issues"
  },
  "homepage": "https://github.com/aesopov/pulsar-store#readme",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "tsdown": "^0.20.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^2.0.0"
  }
}
